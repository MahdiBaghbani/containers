# Image versions (platform suffixes may be required - edit manually)
IMAGE_VALKEY=9.0-alpine
IMAGE_MARIADB=11.8
IMAGE_NEXTCLOUD=local-debian

# Nextcloud Settings
# External domain (Traefik routing + browser access)
NEXTCLOUD_DOMAIN=1.nextcloud.cloud.test.azadehafzar.io

# HTTPS Mode: off (HTTP-only, default for reverse proxy), https-only (redirect HTTP to HTTPS), http-and-https (both ports)
# When using Traefik or other reverse proxy handling HTTPS termination, use "off"
# For direct HTTPS access without reverse proxy, use "https-only" or "http-and-https"
NEXTCLOUD_HTTPS_MODE=off

# Internal service names (Docker networking)
MYSQL_HOST=nextcloud-1-test-db
REDIS_HOST=nextcloud-1-test-redis

# Nextcloud Admin Configuration
NEXTCLOUD_ADMIN_USER=admin-builtin
NEXTCLOUD_ADMIN_PASSWORD=admin
NEXTCLOUD_TRUSTED_DOMAINS=1.nextcloud.cloud.test.azadehafzar.io
NEXTCLOUD_DATA_DIR=/var/www/html/data
CONTACTS_ENABLE_OCM_INVITES=true
CONTACTS_MESH_PROVIDERS_SERVICE=

# OCM Invites UX Configuration
# Mode: "basic" (email required, encoded hidden) or "advanced" (all features)
CONTACTS_OCM_INVITES_MODE=advanced
# Per-flag overrides (optional - leave empty to use mode defaults)
CONTACTS_OCM_INVITES_OPTIONAL_MAIL=
CONTACTS_OCM_INVITES_CC_SENDER=
CONTACTS_OCM_INVITES_ENCODED_COPY_BUTTON=

# Database Configuration (MariaDB/MySQL)
MYSQL_ROOT_PASSWORD=rootpassword
MYSQL_DATABASE=nextcloud
MYSQL_USER=nextcloud
MYSQL_PASSWORD=nextcloudpassword

# Redis Configuration (optional but recommended for caching)
